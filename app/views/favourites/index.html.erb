
<h1 class="favourite-header">Favourites</h1>
<ul>
  <% current_user.favourites.each do |favourite| %>
    <% place = favourite.place %>
    <li class="favourite-item">
      <div class="image-container" style="background-image: url('<%= place.image_url %>');">
      </div>
      <div class="item-details">
        <div class="item-name">
          <%= place.name %>
          <span class="favourite-icon"><i class="fas fa-heart"></i></span>
        </div>
        <div class="item-description">
          <%= place.description %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
